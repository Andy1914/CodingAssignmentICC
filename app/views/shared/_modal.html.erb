<%= turbo_frame_tag "modal" do %>
  <div class="absolute w-full h-screen bg-black bg-opacity-70 top-0 left-0 z-10 flex justify-center items-center hidden" data-modal-target="modal" data-action="modal#hide" >

  <div class="w-3/6 bg-white p-4 rounded-2xl z-20" >
    <div>
      <div class="flex justify-between items-center mb-4">
        <h1 class="text-2xl font-bold text-primary">Edit Return Reason</h1>
        <button data-action="modal#hide"><%= show_svg('x.svg') %></button>

      </div>
      <%= turbo_frame_tag "modal-body" do %>
        <%= yield %>
      <% end %>
    </div>
  </div>
  </div>
<% end %>